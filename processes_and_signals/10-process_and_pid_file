#!/usr/bin/env bash
#create f
pid=$/var/run/myscript.pid

while :
	        echo $$ > $pid
	do
		        echo "To infinity and beyond"
			        sleep 2
				        trap echo "Y U no love me?!" $pid SIGINT
					        trap echo "I hate the kill command" $pid SIGTERM
						        trap $pid SIGQUIT
						done
